<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:padding="4dp"
                                             android:background="?attr/colorControlHighlight"
                                             android:layout_margin="1dp"
                                             android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/imageButtonDone"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="4dp"
        android:layout_width="65dp"
        android:layout_height="65dp"/>

    <TextView
        android:text="TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTitle"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageButtonDone"
        android:textSize="@dimen/title_size"
        android:layout_marginEnd="40dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
        android:text="TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textViewDetails"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageButtonDone"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
        android:textSize="@dimen/details_size"
        android:layout_marginEnd="40dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTimeToDo"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageButtonDone"
        android:textSize="@dimen/timetodo_size"
        app:layout_constraintTop_toBottomOf="@+id/textViewDetails"
        android:layout_marginTop="4dp"/>

    <ImageButton
        app:srcCompat="@drawable/ic_mode_edit_black_24dp"
        android:id="@+id/imageButtonEdit"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="2dp"
        app:layout_constraintRight_toRightOf="parent"
        android:scaleType="centerCrop"
        android:elevation="5dp"
        android:layout_marginTop="2dp"
        android:layout_width="45dp"
        android:layout_height="45dp"/>

    <ImageButton
        android:layout_width="45dp"
        app:srcCompat="@drawable/ic_delete_black_24dp"
        android:id="@+id/imageButtonDelete"
        android:layout_marginEnd="2dp"
        app:layout_constraintRight_toRightOf="parent"
        android:scaleType="centerCrop"
        android:elevation="5dp"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonEdit"
        android:layout_marginTop="2dp"
        android:layout_height="45dp"/>

</android.support.constraint.ConstraintLayout>